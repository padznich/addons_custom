<?xml version="1.0" encoding="UTF-8"?>
 <openerp>
    <data>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="partner_instructor_form_view">
            <field name="name">partner.instructor</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Sessions">
                        <group>
                            <field name="instructor"/>
                            <field name="session_ids"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.actions.act_window" id="contact_list_action">
            <field name="name">From upstairs</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form,notebook</field>
        </record>

        <menuitem id="configuration_menu" name="Собственные вкладки" parent="base.menu_main_pm"/>

        <menuitem id="contact_menu1" name="Счета" parent="configuration_menu" action="contact_list_action"/>
        <menuitem id="contact_menu2" name="Закупки" parent="configuration_menu" action="contact_list_action"/>
        <menuitem id="contact_menu3" name="Проблемы" parent="configuration_menu" action="contact_list_action"/>
        <menuitem id="contact_menu4" name="Бюджет" parent="configuration_menu" action="contact_list_action"/>


    </data>
</openerp>
