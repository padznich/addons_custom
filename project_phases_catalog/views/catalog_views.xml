<openerp>
  <data>

      <record model="ir.ui.view" id="view_catalog_phases_tree">
          <field name="name">catalog.phases.tree</field>
          <field name="model">catalog.phases</field>
          <field name="arch " type="xml">
              <tree decoration-info="name=='draft'">
                  <field name="name"/>
                  <field name="priority" invisible="1"/>
                  <field name="color" invisible="1"/>
                  <field name="description"/>
              </tree>
          </field>
      </record>

      <record model="ir.ui.view" id="view_catalog_phases_form">
          <field name="name">catalog.phases.form</field>
          <field name="model">catalog.phases</field>
          <field name="arch" type="xml">
              <form>
                  <sheet>
                      <group>
                          <field name="name" placeholder="Name"/>
                          <field name="description"/>
                          <field name="color" invisible="1"/>
                          <field name="priority" invisible="1"/>
                      </group>
                  </sheet>
              </form>
          </field>
      </record>

      <record model="ir.ui.view" id="view_phase_tree">
          <field name="name">phase.tree</field>
          <field name="model">catalog.phase</field>
          <field name="arch" type="xml">
              <tree>
                  <field name="project_id"/>
                  <field name="phase_id"/>
                  <field name="date_contract"/>
                  <field name="revenue"/>
              </tree>
          </field>
      </record>

      <record model="ir.ui.view" id="view_phase_form">
          <field name="name">phase.form</field>
          <field name="model">catalog.phase</field>
          <field name="arch" type="xml">
              <form>
                  <sheet>
                      <group>
                          <field name="project_id"/>
                          <field name="phase_id"/>
                          <field name="date_contract"/>
                          <field name="revenue"/>
                      </group>
                  </sheet>
              </form>
          </field>
      </record>


      <!-- The actions-->
      <record model="ir.actions.act_window" id="action_catalog_phases">
          <field name="name">Phases</field>
          <field name="res_model">catalog.phases</field>
          <field name="view_mode">form,tree</field>
          <field name='view_id' ref='view_catalog_phases_form'/>
      </record>

      <record model="ir.actions.act_window" id="action_catalog_phases_table">
          <field name="name">Phases Table</field>
          <field name="res_model">catalog.phase</field>
          <field name="arch" type="xml">
                  <p t-foreach="phase_id" t-as="i">
                    <t t-esc="i"/>
                </p>
          </field>
      </record>


      <!-- top level menu: no parent -->
      <menuitem id="main_catalog_phases_menu" name="Каталог Фаз Проектов"/>

      <!-- A first level in the left side menu is needed before using action= attribute -->
      <menuitem id="left_side_catalog_phases" parent="main_catalog_phases_menu" name="Каталог Фаз Проектов"/>

      <!-- the following menuitem should appear *after* its parent and *after* its action -->
      <menuitem id="left_side_catalog_phases_1" name="Phases" parent="left_side_catalog_phases" action="action_catalog_phases"/>
      <menuitem id="left_side_catalog_phases_2" name="Phases Table" parent="left_side_catalog_phases" action="action_catalog_phases_table"/>


  </data>
</openerp>