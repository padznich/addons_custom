<?xml version="1.0" encoding="utf-8"?>
<templates t-name="selectcolumns">
   <t t-extend="ListView.buttons">

   <t t-jquery="button.o_list_button_add" t-operation="before" >

      <button name="select_columns" type="button" id="select_columns" class="oe_select_columns oe_button btn-primary oe_form_button_create btn btn-default btn-sm oe_dropdown_toggle" data-toggle="dropdown">
            Select Column(s) <span class="caret" style = "margin:3px"></span>
        </button>

      <ul id="showcb" class="oe_dropdown_menu" style="max-height:250px; overflow:auto;">
          <li>
              <button name="apply" id="apply" class="oe_dropdown_btn">
            Apply
             </button>
        </li>
      </ul>
    </t>
</t>
</templates>
